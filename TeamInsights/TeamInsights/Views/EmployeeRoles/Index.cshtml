@model IEnumerable<TeamInsights.Models.EmployeeRole>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.RoleName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeRoleID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EmployeeRoleID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EmployeeRoleID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex justify-content-between align-items-center mb-3">
    <p>
        <a asp-controller="People" asp-action="Index" class="btn from-right">Back</a>
    </p>
</div>

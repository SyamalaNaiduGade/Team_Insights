@* @model TeamInsights.ViewModels.PerformanceReportViewModel (You would use this line if you pass the performance view Model)*@

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid d-flex">
    <!-- Sidebar -->
    <aside class="sidebar d-flex flex-column p-3 me-4" style="width: 250px">
        @* <h2 class="logo text-center">Team Insights Management System</h2> *@
        <video id="logo-video" autoplay playsinline muted>
            <source src="~/Images/logo.mp4" type="video/mp4">
        </video>
        <nav>
            <ul class="nav flex-column">
                <li><a asp-controller="Home" asp-action="Index" class="nav-link active">Home</a></li>
                <li><a asp-controller="People" asp-action="Index" class="nav-link">People</a></li>
                <li><a asp-controller="Projects" asp-action="Index" class="nav-link">Projects</a></li>
                <li><a asp-controller="Roles" asp-action="Index" class="nav-link">Roles</a></li>
                <li><a asp-controller="Contributions" asp-action="Index" class="nav-link">Contributions</a></li>
                <li><a asp-controller="Evaluations" asp-action="Index" class="nav-link">Evaluations</a></li>
                <li><a asp-controller="Performances" asp-action="Index" class="nav-link">Performance Metrics</a></li>
            </ul>
        </nav>
        <div class="user-profile mt-auto">
            <button class="profile-btn d-flex align-items-center border p-2 rounded-3 shadow-sm w-100">
                <img src="images/uifaces-popular-image.jpg" alt="User Avatar" class="avatar rounded-circle me-3" style="width: 40px; height: 40px;">
                <div>
                    <p class="m-0"><strong>Team Insights Admin</strong></p>
                    <span class="small">teaminsightsadmin@mail.com</span>

                </div>
            </button>
            <div class="dropdown-menu mt-2">
                <a href="#" class="dropdown-item">Profile</a>
                <a href="#" class="dropdown-item">Settings</a>
                <a asp-controller="Splash" asp-action="Index" class="dropdown-item">Logout</a>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="content-panel flex-grow-1 p-4 bg-white rounded-3 shadow-sm ms-3">
        <h1 class="home-header mb-10" style="font-size: 42px; font-weight: 500;">Home</h1>
        <div class="tailwind-section">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" />

            <!-- Manager & Leadership Insights -->
            <section class="mb-10">
                <h2 class="text-2xl font-bold mb-4">Manager & Leadership Insights</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    <div class="bg-white shadow-md rounded-2xl p-4">
                        <h3 class="text-lg font-semibold mb-1">👩‍💼 Alice Johnson</h3>
                        <p><strong>Position:</strong> Senior Project Manager</p>
                        <p><strong>Projects Led:</strong> 3</p>
                        <p><strong>Team Size:</strong> 6 Employees</p>
                        <p><strong>Experience:</strong> 10+ years</p>
                        <blockquote class="italic text-gray-600 border-l-4 border-blue-300 pl-3 mt-2">
                            "I believe in data-driven leadership."
                        </blockquote>
                    </div>
                </div>
            </section>

            <!-- Quick Project Summary Cards -->
            <section class="mb-10">
                <h2 class="text-2xl font-bold mb-4">Quick Project Summary Cards</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    <div class="bg-white shadow-md rounded-2xl p-4">
                        <h3 class="text-lg font-semibold mb-1">🧠 Predictive Planning</h3>
                        <p><strong>Start:</strong> Jan 2024 – <strong>End:</strong> June 2024</p>
                        <p><strong>Manager:</strong> Alice Johnson</p>
                        <p><strong>Team:</strong> 👥 6 Employees</p>
                        <div class="mt-2">
                            <div class="bg-gray-200 rounded-full h-3 w-full">
                                <div class="bg-blue-500 h-3 rounded-full w-4/5"></div>
                            </div>
                            <p class="text-sm mt-1 text-gray-600">Progress: 80%</p>
                        </div>
                    </div>
                    <div class="bg-white shadow-md rounded-2xl p-4">
                        <h3 class="text-lg font-semibold mb-1">🔍 Project Retrospective</h3>
                        <p><strong>Start:</strong> March 2024 – <strong>End:</strong> Aug 2024</p>
                        <p><strong>Manager:</strong> Brian Carter</p>
                        <p><strong>Team:</strong> 👥 5 Employees</p>
                        <div class="mt-2">
                            <div class="bg-gray-200 rounded-full h-3 w-full">
                                <div class="bg-green-500 h-3 rounded-full w-2/5"></div>
                            </div>
                            <p class="text-sm mt-1 text-gray-600">Progress: 40%</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Project Completion Trends Chart Placeholder -->
            <section class="mb-10">
                <h2 class="text-2xl font-bold mb-4">📈 Project Performance Trend Over Time</h2>
                <div class="bg-white rounded-2xl p-6 shadow-md text-gray-600 text-sm">
                    <canvas id="completionChart" class="w-full h-64"></canvas>
                </div>
            </section>

            <!-- Team Collaboration Insights -->
            <section class="mb-10">
                <h2 class="text-2xl font-bold mb-4">🤝 Team Collaboration Insights</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    <div class="bg-white shadow-md rounded-2xl p-4">
                        <h3 class="text-lg font-semibold mb-1">Most Active Collaborators</h3>
                        <ul class="list-disc list-inside text-gray-700">
                            <li>Michael Lee – 12 Project Contributions</li>
                            <li>Sarah Patel – 10 Project Contributions</li>
                            <li>David Chen – 9 Project Contributions</li>
                        </ul>
                    </div>
                </div>
            </section>

            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script>
                const ctx = document.getElementById('completionChart').getContext('2d');
                const completionChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['2022', '2023', '2024'],
                        datasets: [{
                            label: 'Performance Score %',
                            data: [45, 60, 70, 75, 82, 90],
                            borderColor: '#3B82F6',
                            backgroundColor: 'rgba(59, 130, 246, 0.2)',
                            tension: 0.4,
                            fill: true,
                            pointBackgroundColor: '#3B82F6',
                            pointRadius: 5
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                display: true,
                                position: 'top'
                            },
                            tooltip: {
                                enabled: true
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100,
                                title: {
                                    display: true,
                                    text: 'Manager Evaluation Score %'
                                }
                            },
                            x: {
                                title: {
                                    display: true,
                                    text: 'Year'
                                }
                            }
                        }
                    }
                });
            </script>
        </div>
    </main>

    <!-- Chatbot Container (at the end of the main content) -->
    <div class="chatbot-container fixed bottom-5 right-5 z-50">
        <button id="chatbot-toggle" class="chatbot-toggle bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full shadow-md">
            <img src="message-icon.png" alt="Chatbot" width="30" class="align-middle">  <!-- Replace with your icon -->
        </button>

        <div id="chatbot-window" class="chatbot-window hidden absolute bottom-20 right-0 w-96 bg-white border border-gray-300 rounded-lg shadow-lg">
            <div class="chatbot-header bg-blue-500 text-white p-3 rounded-t-lg flex items-center justify-between">
                <span class="chatbot-title text-lg font-semibold">Team Insights Bot</span>
                <button id="chatbot-close" class="chatbot-close text-xl font-bold">×</button>
            </div>
            <div id="chatbot-messages" class="chatbot-messages p-4 h-64 overflow-y-auto">
                <!-- Chat messages will be displayed here -->
            </div>
            <div class="chatbot-input-area p-3 border-t border-gray-300 flex">
                <input type="text" id="chatbot-input" class="chatbot-input flex-grow p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Type your question...">
                <button id="chatbot-send" class="chatbot-send bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md ml-2">Send</button>
            </div>
        </div>
    </div>

    <script>
        // Chatbot JavaScript Logic
        const chatbotToggle = document.getElementById('chatbot-toggle');
        const chatbotWindow = document.getElementById('chatbot-window');
        const chatbotClose = document.getElementById('chatbot-close');
        const chatbotInput = document.getElementById('chatbot-input');
        const chatbotSend = document.getElementById('chatbot-send');
        const chatbotMessages = document.getElementById('chatbot-messages');

        // Sample questions and answers
        const faq = {
            "What is Team Insights?": "Team Insights is a project to create and manage...",
            "What is Team Insights": "Team Insights is a project to create and manage...",
            "Hello": "Hello, How can i Help you today?",
            "Hi": "Hi, How can i Help you today?",
            "": "",
            "How do I create a project?": "To create a project, go to...",
            "What roles are available?": "We have roles such as developer...",
            // Add more questions and answers here
        };

        // Function to add a message to the chat
        function addMessage(message, isUser) {
            const messageElement = document.createElement('div');
            messageElement.classList.add(isUser ? 'user-message' : 'bot-message', 'mb-2');
            messageElement.textContent = message;
            chatbotMessages.appendChild(messageElement);
            chatbotMessages.scrollTop = chatbotMessages.scrollHeight; // Scroll to the bottom
        }

        // Function to handle sending a message
        function sendMessage() {
            const message = chatbotInput.value.trim();
            if (message) {
                addMessage(message, true); // Add user message

                // Find the answer
                const answer = faq[message] || "Sorry, I don't have an answer to that question.";
                setTimeout(() => {
                    addMessage(answer, false); // Add bot answer after a short delay
                }, 500);

                chatbotInput.value = ''; // Clear the input
            }
        }

        // Event listeners
        chatbotToggle.addEventListener('click', () => {
            chatbotWindow.classList.toggle('hidden');
        });

        chatbotClose.addEventListener('click', () => {
            chatbotWindow.classList.add('hidden');
        });

        chatbotSend.addEventListener('click', sendMessage);

        chatbotInput.addEventListener('keypress', (event) => {
            if (event.key === 'Enter') {
                sendMessage();
            }
        });
    </script>
</div>
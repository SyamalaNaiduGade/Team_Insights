@model IEnumerable<TeamInsights.Models.Evaluation>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid d-flex">

    <!-- Main Content -->
    <main class="content-panel flex-grow-1 p-4 bg-white rounded-3 shadow-sm ms-3">
        <h1>Evaluations</h1>

        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Score)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Comments)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EvaluationDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Score)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Comments)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EvaluationDate)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.EvaluationID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.EvaluationID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.EvaluationID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                <a asp-action="Create" class="btn from-right">Create New</a>
            </p>
        </div>
    </main>
</div>
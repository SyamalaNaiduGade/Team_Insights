@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Team Insights</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TeamInsights.styles.css" asp-append-version="true" />
</head>
<body class="dark-theme">

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4 login-card">
            <h2 class="text-center mb-3 text-dark">Sign In</h2>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label text-dark">Email</label>
                    <input asp-for="Input.Email" type="email" class="form-control custom-input" autocomplete="username" placeholder="Enter your email address" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label text-dark">Password</label>
                    <input asp-for="Input.Password" type="password" class="form-control custom-input" autocomplete="current-password" placeholder="Enter your password" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label text-dark">Remember Me</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 custom-button">
                    Log in
                </button>

                <div class="text-center mt-3">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none text-primary link-hover">Register as a new user</a>
                    </p>
                    <p>
                        <a asp-page="./ForgotPassword" class="text-decoration-none text-primary link-hover">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <footer class="text-muted text-center mt-4 text-light">
        &copy; 2025 - Team Insights - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <style>
        /* Dark Theme Background */
        .dark-theme {
            background-color: #000;
            color: #fff;
        }

        /* White Login Card */
        .login-card {
            background: #fff;
            border-radius: 10px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

        /* Input Fields */
        .custom-input {
            background: #fff;
            border: 2px solid #ddd;
            color: #333;
            border-radius: 8px;
            transition: 0.3s;
            padding: 10px;
        }

            .custom-input:focus {
                border-color: #007BFF;
                box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3);
            }

        /* Button */
        .custom-button {
            background: linear-gradient(to right, #007BFF, #0056B3);
            border: none;
            color: white;
            font-weight: bold;
            transition: 0.3s;
        }

            .custom-button:hover {
                background: linear-gradient(to right, #0056B3, #003F7F);
            }

        /* Links */
        .link-hover:hover {
            text-decoration: underline;
            color: #007BFF;
        }
    </style>

</body>
</html>
